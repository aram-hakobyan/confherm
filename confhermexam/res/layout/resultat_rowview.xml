<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="#f5f5f5"
    android:gravity="center_vertical"
    android:minHeight="70dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/examNameResultat"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Exam Name"
        android:textColor="@color/app_main_color"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/ic_resultat" />

    <TextView
        android:id="@+id/examCorrection"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Exam Description"
        android:textColor="@color/app_main_color"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="17dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ic_note" />

    <TextView
        android:id="@+id/examStats"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Exam Description"
        android:textColor="@color/app_main_color"
        android:textSize="20sp" />

</LinearLayout>